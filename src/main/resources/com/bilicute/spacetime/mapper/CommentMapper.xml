<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bilicute.spacetime.mapper.CommentMapper">
    <!--动态SQL-->
    <select id="list" resultType="com.bilicute.spacetime.pojo.Comment">
        select * from comment
        <where>
            <if test="articleId!=null">
                article_id=#{articleId}
            </if>
            <if test="auditingState!=null">
                and auditing_state=#{auditingState}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>
    <select id="listBySelf" resultType="com.bilicute.spacetime.pojo.Comment">
        select * from comment
        <where>
            create_user=#{userID}
            <if test="articleId!=null">
                and article_id=#{articleId}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>
</mapper>